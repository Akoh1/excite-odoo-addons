<odoo>
  <data>
      <record id="view_job_recruit_custom" model= "ir.ui.view">
        <field name="name">hr.job..recruit.form</field>
        <field name="model">hr.job</field>
        <field name="inherit_id" ref="hr.view_hr_job_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='set_open']" position="after">
                <button name="hr_approve" string="HR Approve"
                type="object" class="oe_highlight"
                states="draft" groups="hr_recruitment.group_hr_recruitment_user"/>
<!--                groups="hr_recruitment.group_hr_recruitment_user"/>-->
            </xpath>
          <xpath expr="//field[@name='name']/../.." position="after">
               <div class="oe_title">
                 <label for="ref_num"/>
                 <field name="ref_num" />
               </div>

            </xpath>
          <xpath expr="//notebook" position="inside">
                <page string="Salary Structure">
                  <group>
                    <group name="salary_strucutre">

                      <field name="salary_structure"/>
                    </group>

                  </group>
                </page>
            </xpath>

        </field>
    </record>

    <record id="hr_job_survey_extend" model= "ir.ui.view">
        <field name="name">hr.job.form1.extend</field>
        <field name="model">hr.job</field>
        <field name="inherit_id" ref="hr_recruitment.hr_job_survey"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='address_id']" position="replace">
              <field name="job_location"/>
              <field name="job_type"/>
            </xpath>
          

        </field>
    </record>

    <record id="view_applicant_recruit_custom" model= "ir.ui.view">
        <field name="name">hr.applicant.recruit</field>
        <field name="model">hr.applicant</field>
        <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
        <field name="arch" type="xml">

          <xpath expr="//field[@name='description']" position="after">
            <group>
              <field name="interview_scores"/>
              <field name="resume"/>
              <!-- <field name="resume_id"/> -->
            </group>
          </xpath>

        </field>
    </record>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="job_location_tree">
      <field name="name">job.location.tree</field>
      <field name="model">job.location</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record id="job_location_form" model="ir.ui.view">
        <field name="name">job.location.form</field>
        <field name="model">job.location</field>
        <field name="priority">2</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>

                </sheet>

            </form>
        </field>
    </record>


    <record model="ir.actions.act_window" id="job_location_window">
      <field name="name">Job Location</field>
      <field name="res_model">job.location</field>
      <field name="view_mode">tree,form</field>
    </record>



    <menuitem name="Job Location" id="job_location_menu"
              parent="hr_recruitment.menu_hr_recruitment_configuration"
              action="recruitment_custom.job_location_window"
              groups="hr_recruitment.group_hr_recruitment_user,hr_recruitment.group_hr_recruitment_manager"
              sequence="11"/>


  </data>
</odoo>