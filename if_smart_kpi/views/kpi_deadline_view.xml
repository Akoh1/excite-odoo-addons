<odoo>
    <data>
        <record id="deadline_tree" model="ir.ui.view">
            <field name="name">Deadline Form</field>
            <field name="model">kpi.deadline</field>
            <field name="arch" type="xml">
                <tree string="KPI Deadline">
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </tree>
            </field>
        </record>

        <record id="deadline_form" model="ir.ui.view">
            <field name="name">Deadline Form</field>
            <field name="model">kpi.deadline</field>
            <field name="arch" type="xml">
                <form string="KPI Deadline">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="apply_on_draft"/>
                            <field name="apply_for_appraisal"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_kpi_deadline" model="ir.actions.act_window">
            <field name="name">KPI Deadline</field>
            <field name="res_model">kpi.deadline</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_kpi_deadline_id"
                  parent="if_smart_kpi.kpi_config" name="KPI Deadline"
                  action="action_kpi_deadline"
                  groups="if_smart_kpi.group_kpi_manager"
                  sequence="55"/>
    </data>
</odoo>